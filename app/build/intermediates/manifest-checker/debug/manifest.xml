        <activity android:name="hr.ferit.kreso.krunica.Main2Activity" />
        <activity android:name="hr.ferit.kreso.krunica.Otajstva" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="hr.ferit.kreso.krunica.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
