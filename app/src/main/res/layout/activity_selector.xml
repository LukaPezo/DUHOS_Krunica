<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selector"
    android:background="@drawable/gradient">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/covjek"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"/>

    <RelativeLayout
        android:id="@+id/krunice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/izborKrunice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Izaberi krunicu koju želiš moliti:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textSize="23sp"/>

    <RadioGroup
        android:id="@+id/radioButtonsKrunice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/izborKrunice"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        <RadioButton
            android:id="@+id/gospinaKrunica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gospina krunica"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/svJosip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krunica sv.Josipa"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/milosrdje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krunica Božjeg milosrđa"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/srceIsusovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krunica Srca Isusovog"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/malaMarija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mala krunica bezgrešnog Srca Marijina"
            android:textSize="18sp"/>
    </RadioGroup>

        <Button
            android:id="@+id/door_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/exit"/>
    </RelativeLayout>

</RelativeLayout>